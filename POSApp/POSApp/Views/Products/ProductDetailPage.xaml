<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="{Binding Title}"
             x:Class="POSApp.Views.Products.ProductDetailPage">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Product Name:" FontSize="Medium" />
        <Label Text="{Binding ProductName}" FontSize="Small"/>
        <Label Text="Price:" FontSize="Medium" />
        <Label Text="{Binding Price}" FontSize="Small"/>
    </StackLayout>

</ContentPage>